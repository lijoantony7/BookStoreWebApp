
<div class="card mb-4 shadow-sm">
    <div class="card-img">
        <img src="@(string.IsNullOrEmpty(Model.CoverPhotoUrl) ? "/images/dummy.png" : Model.CoverPhotoUrl)" alt="@Model.Title" class="img-thumbnail" />
    </div>
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty( Model.Title ) ? "Title Not Availbale" : Model.Title)</h3>
        <p class="card-text">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a href="/model/modelDetails/@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@Model.Author</small>
        </div>
    </div>
</div>