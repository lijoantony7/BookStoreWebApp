<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | Book Store App</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <style>
        /* CSS for a flexbox layout */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .content-wrap {
            flex: 1 0 auto;
        }

        .site-footer {
            flex-shrink: 0;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.png" width="30" height="30" alt="Book Store Logo">
                    Book Store
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
                        </li>  
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AllBooks">All Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AddBook">AddBook</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Feature</a>            
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("breadcrumb", required:false);

    <div class="content-wrap">
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer border-top footer text-muted text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; 2024 Book Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>